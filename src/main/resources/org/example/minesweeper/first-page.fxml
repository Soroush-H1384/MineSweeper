<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.minesweeper.FirstPageController">
   <center>
      <VBox alignment="CENTER" prefHeight="460.0" prefWidth="677.0" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="playGameButton" mnemonicParsing="false" onAction="#goGame" prefHeight="100.0" prefWidth="300.0" text="Play Game">
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Button fx:id="playOnlineButton" mnemonicParsing="false" onAction="#goOnlineGame" prefHeight="100.0" prefWidth="300.0" text="Play online">
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exit" prefHeight="100.0" prefWidth="300.0" text="Exit">
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
