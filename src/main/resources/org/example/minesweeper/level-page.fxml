<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.minesweeper.LevelPageController">
   <center>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="easyLevelButton" mnemonicParsing="false" onAction="#easyLevel" prefHeight="100.0" prefWidth="300.0" text="Easy">
               <font>
                  <Font size="44.0" />
               </font>
            </Button>
            <Button fx:id="normalLevelButton" mnemonicParsing="false" onAction="#normalLevel" prefHeight="100.0" prefWidth="300.0" text="Normal">
               <font>
                  <Font size="44.0" />
               </font>
            </Button>
            <Button fx:id="hardLevelButton" mnemonicParsing="false" onAction="#hardLevel" prefHeight="100.0" prefWidth="300.0" text="Hard">
               <font>
                  <Font size="44.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
